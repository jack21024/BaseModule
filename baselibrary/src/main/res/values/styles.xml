<resources>
    <style name="bs_title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textColor">@color/bs_gray_900</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="bs_separator_hor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.7dp</item>
        <item name="android:background">@color/bs_gray_400</item>
    </style>

    <style name="bs_separator_hor_thin" parent="bs_separator_hor">
        <item name="android:layout_height">0.6dp</item>
        <item name="android:background">@color/bs_gray_300</item>
    </style>

    <!-- Text style -->

    <style name="bs_roboto_medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="bs_roboto">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="bs_roboto_light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="bs_roboto_thin">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="bs_lala_text_title_normal" parent="bs_roboto_medium">
        <item name="android:textSize">@dimen/bs_text_normal</item>
        <item name="android:textColor">@color/bs_gray_900</item>
    </style>

    <style name="bs_lala_text_context_normal" parent="bs_roboto_light">
        <item name="android:textSize">@dimen/bs_text_normal</item>
    </style>

    <style name="bs_lala_text_context_small" parent="bs_roboto_thin">
        <item name="android:textSize">@dimen/bs_text_small</item>
        <item name="android:textColor">@color/bs_gray_500</item>
    </style>
</resources>
